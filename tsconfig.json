{
  "compileOnSave": false,
  "compilerOptions": {
    "experimentalDecorators": true,
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@shared/services": ["libs/services/index.ts"],
      "@shared/types": ["libs/types/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
